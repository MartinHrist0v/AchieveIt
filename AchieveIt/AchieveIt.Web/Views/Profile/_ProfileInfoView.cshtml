@model AchieveIt.Web.Models.ProfileInfoViewModel


<div id="get-profile">
    <h2> <span class="glyphicon glyphicon-user small"></span> @Model.UserName <span class="badge" style="margin-left:15px; margin-bottom:30px;">@Html.DisplayFor(model => model.Votes)</span></h2>
    @if (User.Identity.IsAuthenticated && User.Identity.Name != Model.UserName)
    {
        <button type="button" class="btn btn-success">Vote Up</button>
        <button type="button" class="btn btn-danger">Vote Down</button>
        <br />
    }
    <br />
    <div id="profile-picture-section">
    @if (@Model.PictureUri != null)
    {
        <img src="data:image;base64,@Model.PictureUri" alt="Profile Picture" height="220" width="220" enctype="multipart/form-data"  />
        <span id="profile-picture-edit"></span>
    }
    else
    {
        <img src="~/Content/Images/NoPictureImage.jpg" alt="Missing Picture" height="220" , width="220" enctype="multipart/form-data" />
        <span id="profile-picture-edit"></span>
    }
        
