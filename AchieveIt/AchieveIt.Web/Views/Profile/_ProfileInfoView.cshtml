    <hr />
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd id="username">
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd id="email">
            <span style="float:right" class="glyphicon glyphicon-remove"></span>
            <p> @Html.DisplayFor(model => model.Email)</p>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FacebookUrl)
        </dt>

        <dd id="facebookUrl">
            <span style="float:right" class="glyphicon glyphicon-remove"></span>
            <p>@Html.DisplayFor(model => model.FacebookUrl)</p>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nationality)
        </dt>

        <dd id="nationality">
            <span style="float:right;" class="glyphicon glyphicon-remove"></span>
            <p>@Html.DisplayFor(model => model.Nationality)</p>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateRegisered)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateRegisered)
        </dd>

    </dl>
    @if (this.User.Identity.Name == Model.UserName)
    {
        <a href="~/Profile/@Model.UserName/Edit" class="btn btn-info" role="button">Edit Profile</a>

    }
</div>

